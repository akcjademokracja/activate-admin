
<div class="page-header"> 
  <h1>Dashboard</h1>
</div>
 
<table class="table table-striped">
  <thead>
    <tr>
      <th></th>
      <th>#</th>
      <th></th>
    </tr>
  </thead>
  <% models.sort_by { |model| model.to_s }.each { |model| %>
    <tr>
      <td><a href="<%=url(:index, :model => model.to_s)%>"><%= human_model_name(model).pluralize %></a></td>
      <td><%= model.count %></td>
      <td>
        <a href="<%=url(:index, :model => model.to_s)%>" class="btn btn-default"><i class="fa fa-list"></i>&nbsp;List</a>      
        <a href="<%=url(:new, :model => model.to_s)%>" class="btn btn-primary"><i class="fa fa-pencil"></i>&nbsp;New</a>
      </td>
    </tr>
  <% } %>
</table>
