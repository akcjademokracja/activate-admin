
<% form_tag url(:login), :class => 'form-horizontal' do %>

  <div class="form-group">
    <label class="control-label col-md-3">Email</label>
    <div class="col-md-3">
      <%= text_field_tag :email, :value => params[:email], :class => 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <label class="control-label col-md-3">Password</label>
    <div class="col-md-3">
      <%= password_field_tag :password, :value => params[:password], :class => 'form-control' %>
    </div>
  </div>

  <% if Padrino.env == :development %>
    <div class="form-group">
      <label class="control-label col-md-3">Bypass login?</label>
      <div class="col-md-3">
        <%= check_box_tag :bypass %>
      </div>
    </div>
  <% end %>

  <div class="form-group">
    <div class="col-md-offset-3 col-md-3">
      <button class="btn btn-primary" type="submit">Sign in</button>
    </div>
  </div>

<% end %>
